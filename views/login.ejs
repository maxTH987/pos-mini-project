<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <title>เข้าสู่ระบบ - POS System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body { 
            background-color: #e3f2fd; 
            height: 100vh; display: flex; align-items: center; justify-content: center; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .login-card { 
            width: 100%; max-width: 420px; border-radius: 20px; overflow: hidden; 
            box-shadow: 0 15px 35px rgba(30, 136, 229, 0.2); border: 2px solid #bbdefb; 
            background: white;
        }
        .login-header { 
            background: linear-gradient(135deg, #42a5f5, #1e88e5); 
            padding: 40px 20px; text-align: center; 
        }
        .login-header h2 { color: #fff; font-weight: 800; text-shadow: 1px 1px 2px rgba(0,0,0,0.1); }
        .login-header p { color: #ffeb3b; font-weight: 600; font-size: 1.1rem; margin-top: 10px; }
        
        .input-group-text { background-color: #f8f9fa; border-right: none; color: #1e88e5; font-size: 1.2rem; }
        .form-control { border-left: none; padding-left: 0; }
        .form-control:focus { box-shadow: none; border-color: #dee2e6; }
        .input-group:focus-within { box-shadow: 0 0 0 0.25rem rgba(30, 136, 229, 0.25); border-radius: 0.375rem; }

        .btn-theme { 
            background-color: #ffc107; color: #000; font-weight: 800; 
            font-size: 1.2rem; border-radius: 10px; transition: all 0.3s; 
            border: none;
        }
        .btn-theme:hover { 
            background-color: #ffb300; transform: translateY(-2px); 
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4); 
            color: #000;
        }
        .footer-text { font-size: 0.85rem; color: #6c757d; padding-bottom: 15px; text-align: center;}
    </style>
</head>
<body>

<div class="login-card">
    <div class="login-header">
        <h2 class="mb-0"><i class="fa-solid fa-cart-shopping text-warning me-2"></i> POS System</h2>
    </div>
    <div class="card-body p-4">
        <h5 class="text-center text-muted mb-4 fw-bold">กรุณาเข้าสู่ระบบเพื่อใช้งาน</h5>
        <form onsubmit="handleLogin(event)">
            <label class="form-label text-muted fw-bold mb-1">ชื่อผู้ใช้งาน (Username)</label>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                <input type="text" id="username" class="form-control form-control-lg" placeholder="ป้อน Username" required>
            </div>
            
            <label class="form-label text-muted fw-bold mb-1">รหัสผ่าน (Password)</label>
            <div class="input-group mb-4">
                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                <input type="password" id="password" class="form-control form-control-lg" placeholder="ป้อนรหัสผ่าน" required>
            </div>
            
            <button type="submit" class="btn btn-theme btn-lg w-100 shadow-sm"><i class="fa-solid fa-rocket me-2"></i> เข้าสู่ระบบ</button>
        </form>
    </div>
</div>

<script>
    localStorage.removeItem('pos_role');
    localStorage.removeItem('pos_name');

    async function handleLogin(e) {
        e.preventDefault();
        const data = { username: document.getElementById('username').value, password: document.getElementById('password').value };

        try {
            const res = await fetch('/api/staff/login', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(data) });
            const result = await res.json();

            if (res.ok) {
                localStorage.setItem('pos_role', result.data.role);
                localStorage.setItem('pos_name', result.data.name);
                
                Swal.fire({ title: 'ยินดีต้อนรับ!', text: `คุณ ${result.data.name}`, icon: 'success', timer: 1500, showConfirmButton: false })
                .then(() => { window.location.href = '/'; });
            } else {
                Swal.fire('เข้าสู่ระบบล้มเหลว', result.error, 'error');
            }
        } catch (err) {
            Swal.fire('ผิดพลาด', 'ไม่สามารถเชื่อมต่อเซิร์ฟเวอร์ได้', 'error');
        }
    }
</script>
</body>
</html>